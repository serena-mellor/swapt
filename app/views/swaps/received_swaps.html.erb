<%= render "shared/hamburger_menu" %>
<div class="container swaps">
  <h3 class= "swap-title">INCOMING SWAPS</h3>
  <%  @swaps_received.each do |swap| %>
  <div class="swap-card">
    <div class= "d-flex card-top">
      <div class= "col-6 p-2 incoming-swap-container">
        <%= render "items/item", item: swap.requested_item, full_width: true, bg_color: "#F3EDE2" %>
        <p class="information-swaps-container"><%= link_to swap.sender.username, closet_path(swap.sender), class: 'owned-by-link' %> has requested this item</p>
      </div>
      <div class="align-self-center"> <i class="fa fa-exchange" aria-hidden="true"></i></div>
        <% if swap.second_item.present? %>
      <div class="col-6 p-2">
        <%= render "items/item", item: swap.second_item, full_width: true, bg_color: "#F3EDE2" %>
      </div>
      <% else %>
      <div class="col-6 p-2 pending">
        <h3 class="swap-pending">SWAP PENDING</h3>
      </div>
      <% end %>
    </div>
      <div class="d-flex links">
        <%= link_to "Swap", closet_path(swap.sender), class:"btn-cancel" %>
        <%= link_to "Cancel", item_swap_path(swap.requested_item, swap, {status: "denied"}), data: {turbo_method: :patch}, class:"btn-cancel" %>
      </div>
    </div>
    <% end %>
</div>
