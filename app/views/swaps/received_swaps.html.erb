<div class="container">
  <h3 class= "title">My received swaps</h3>
  <% @swaps_requested.each do |swap| %>
  <div class="swap card"></div>
  <%= swap.id %>
    <div class= "d-flex">
      <div >
        <%= render "items/item", item: swap.requested_item, full_width: true %>
        <%= swap.sender.username %>
      </div>
        <->
      <% if swap.second_item.present? %>
      <div>
        <%= render "items/item", item: swap.second_item, full_width: true %>
        <%= swap.receiver.username %>
      </div>
      <% else %>
      <div>
      <%= swap.status %>
      </div>
      <% end %>
    </div>
    <% end %>
</div>
