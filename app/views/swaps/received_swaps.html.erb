<div class="container swaps">
  <h3 class= "title">My received swaps</h3>
  <%  @swaps_received.each do |swap| %>
    <div class= "d-flex swap-card">
      <div class= "col-6 p-2">
        <%= render "items/item", item: swap.requested_item, full_width: true %>
       <p><%= link_to swap.sender.username, closet_path(swap.sender), class: 'owned-by-link' %> has requested this item</p>
      </div>
      <div class="align-self-center"> <i class="fa fa-exchange" aria-hidden="true"></i></div>
            <% if swap.second_item.present? %>
      <div class="col-6 p-2">
        <%= render "items/item", item: swap.second_item, full_width: true %>
      </div>
      <% else %>
      <div class="col-6 p-2 pending">
            <%= link_to "Cancel", item_swap_path(swap.requested_item, swap, {status: "denied"}), data: {turbo_method: :patch}, class:"btn-green" %>
      </div>
      <% end %>
    </div>
    <% end %>
</div>
